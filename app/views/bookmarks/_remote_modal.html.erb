<%= turbo_frame_tag "remote_modal" do %>
  <div class="modal fade" id="shareRecipeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="remote-modal" data-turbo-cache="false" data-action="turbo:before-render@document->remote-modal#hideBeforeRender">
    <div class="modal-dialog" role="document">
      <div class="modal-content" id="modal_content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create a bookmark</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
          <div class="modal-body remote_modal_body" id="remote_modal_body">
            <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
